{
  "name": "p2p-bolivia-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start -p 3000",
    "start:production": "NODE_ENV=production next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "test": "echo 'Tests will be added soon' && exit 0",
    "docker:build": "docker build -f Dockerfile.production -t p2p-bolivia/frontend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production p2p-bolivia/frontend:latest",
    "deploy:production": "../deploy-production.sh",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "react-hot-toast": "^2.4.1",
    "date-fns": "^3.0.6",
    "clsx": "^2.0.0",
    "lucide-react": "^0.300.0",
    "critters": "^0.0.20"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4"
  }
}